#!/usr/local/bin/bash
# website live or not
# 0.1
# check if a website is up or down

if [[ $1 ]]; then
  for x in $(cat $1); do 
    curl --connect-timeout 5 -s -L "$x" 1>/dev/null
    if [[ "$?" == 0 ]]; then 
      printf "${Green}[+] $x is up.\n"
    else 
      printf "${Red}[-] $x is down.\n"
    fi
  done
else
  printf "Usage: \n\nurnt -h SITE\nurnt -f FILE\n\n"
fi
