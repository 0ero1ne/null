#!/usr/local/bin/bash
# Search an app

# Check if arguments 1 exist
if [ "$1" ]; then
	# Iterate apps
	for f in $(dirname "$0")/*; do
		# If the argument match the name of the app
	    if [[ "$(echo $f | cut -f 5 -d '/')" ==	 "$1" ]]; then
	    	
	    	# Return positive message
	    	printf "${Green}App found!\n"
	    	printf "$Green$(echo $f | cut -f 5 -d '/')\t\t$NC"
	    	
	    	# Print description
	    	if [[ "$(head -n 2 $f | tail -n 1 | cut -c1-1)" == "#" ]]; then
        		printf "$Yellow$(head -n 2 $f | tail -n 1)$NC\n"
    		else
        		printf "$Red$# (No description)$NC\n"
    		fi
		# App found, exit 0    		
    	exit 0
		fi
	done
	# Loop end, return error message
	printf "${Red}App not found!\n"	
else
	# Error message for empty argument
	printf "${Red}Give me an app to search!\n"
fi
